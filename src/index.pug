doctype html
html(lang="ja")
  head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# " + pageOgpType + ": http://ogp.me/ns/" + pageOgpType + "#")
    
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    title #{site.title}
    meta(name="description" content=site.description)
    meta(property="og:type" content=site.ogpType)
    meta(property="og:image" content=site.url + site.imgPath + site.ogpImage)
    meta(property="og:url" content=site.url)
    meta(property="og:description" content=site.description)
    meta(property="og:site_name" content=site.name)
    meta(property="og:locale" content="ja")

    if site.fbAppId
      meta(property="fb:app_id" content=site.fbAppId)
    else if site.fbAdmins
      meta(property="fb:admins" content=site.fbAdmins)

    if site.twitterCard
      meta(name="twitter:card" content=site.twitterCard)
    if site.twitterSite
      meta(name="twitter:site" content=site.twitterSite)

    link(rel="shortcut icon", href=site.url + site.imgPath+ "common/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="/assets/css/main.css")

  body
    - var imgPath= site.imgPath;

    h1 トップページ
    p だよ
    a(href="http://").c-btn ボタン
    img(src=imgPath+"cat01.jpg", alt="")

    script(src="assets/js/main.js")
